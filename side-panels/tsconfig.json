{
  "compilerOptions": {
    "target": "ES5",
    "rootDir": ".",
    "outDir": "build",
    "preserveSymlinks": true,
    "jsx": "react",
    "jsxFactory": "h",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
//    "typeRoots": ["./../kaltura-player-js/tsss"]
    "typeRoots": ["./node_modules/kaltura-player-js/ts-typed"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

